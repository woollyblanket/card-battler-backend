{
	"env": {
		"node": true,
		"es2022": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["unused-imports"],
	"rules": {
		"no-unused-vars": "off",
		"unused-imports/no-unused-imports": "error",
		"unused-imports/no-unused-vars": [
			"warn",
			{
				"vars": "all",
				"varsIgnorePattern": "^_|debug",
				"args": "after-used",
				"argsIgnorePattern": "^_|next"
			}
		],
		"sort-imports": [
			"error",
			{
				"ignoreDeclarationSort": true
			}
		]
	}
}
